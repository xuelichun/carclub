<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.zeepn.dao.PersonDynDao">
 	<insert id="createPersonDyn">
 	private int com_id;
	private int rp_pid;
	private String rp_nick;
	private int rp_rpid;
	private String rp_rnick;
	private String rp_text;
	private String rp_time;
	private int rp_read;
	insert into person_dyn values(person_dyn_seq.nextval,#{u_id},#{pd_msg},#{pd_time},#{pd_num})
	</insert>
	<insert id="createDynPicture">
	insert into dyn_pic values(dyn_pic_seq.nextval,#{pd_id},#{dp_msg})
	</insert>	
	<insert id="createComments">
	insert into comments values(comments_seq.nextval,#{pd_id},#{u_id},#{com_msg},#{com_time},0)
	</insert>
	<insert id="createReply">
	insert into reply values(reply_seq.nextval,#{com_id},#{rp_pid},#{rp_nick},#{rp_rpid},#{rp_rnick},#{rp_text},#{rp_time},0)
	</insert>
	<select id="countPic">
	select count(dp_id) from dyn_pic where pd_id=#{pd_id}
	</select>
  
  </mapper>