	@RequestMapping("/clubAdminai")
	@ResponseBody
	public int[] yanzhenPre(HttpServletRequest request){
		HttpSession session=request.getSession();
		UserInfo userInfo=(UserInfo) session.getAttribute("user");
		int u_id=userInfo.getU_id();
		int flag=preInfoService.isPresident(u_id);
		int[] result=new int[2];
		 if(flag==2){
			result[0]=2;
			result[1]=u_id;
		}else if(flag==3){
			result[0]=3;
			result[1]=u_id;
		}else{
			result[0]=1;
			result[1]=0;
		}
		 return result;	
	}
	
